<%= form_for @user do |u| %>
  <%= u.label :username, "Your user name here: "%><br>
  <%= u.text_field :username%><br><br>
  <%= u.label "Email:"%><br>
  <%= u.text_field :email, value: "example@example.com"%><br><br>
  <%= u.label :password %><br>
  <%= u.password_field :password %><br><br>

  <%= u.submit%>
<% end %>